<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exit_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:text="Add Expense"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/exit_dialog"
        android:layout_alignBottom="@id/exit_dialog"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/ic_close" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_expense"
        android:layout_below="@+id/exit_dialog">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/expenseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Expense Name"
                android:padding="16dp"
                android:singleLine="true" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Income"
                    android:layout_marginLeft="30dp"/>

                <RadioButton
                    android:id="@+id/sound1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:layout_marginRight="30dp"/>

            </RadioGroup>

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/drop_down_shape"
                android:dropDownSelector="@drawable/ic_add"
                android:entries="@array/spinner_values"
                android:padding="1dp"
                android:scrollbarSize="10dp" />

            <EditText
                android:id="@+id/expenseDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expenseName"
                android:hint="Enter Expense Details"
                android:padding="16dp"
                android:singleLine="false" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expenseName"
                android:layout_weight="4"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:text="Submit" />
</RelativeLayout>
